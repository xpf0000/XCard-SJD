<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView android:id="@+id/yg_manage_cell_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="14dp"
        android:scaleType="fitXY"
        android:src="@drawable/yg_header"
        />

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="12dp"
        android:layout_weight="1"
        >

        <TextView android:id="@+id/yg_manage_cell_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#333333"
            android:textSize="19sp"
            android:layout_weight="1"
            android:lines="1"
            android:text="张无忌"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView android:id="@+id/yg_manage_cell_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="17sp"
                android:lines="1"
                android:ellipsize="end"
                android:layout_weight="1"
                android:text="18037975857"
                />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="12dp"
        android:src="@drawable/go_arrow_icon"
        android:layout_gravity="center"
        />



</LinearLayout>