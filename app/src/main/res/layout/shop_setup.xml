<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@color/APPPGBG"
                android:layout_weight="1"
        >



        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="@color/APPPGBG"
            >

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:orientation="horizontal"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:background="@color/white"
                >

                <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/shop_setup_img"
                            android:layout_width="76dp"
                            android:layout_height="76dp"
                            app:riv_corner_radius="38dp"
                            android:scaleType="fitXY"
                            app:riv_border_width="4dp"
                            app:riv_border_color="@color/white"
                           android:layout_marginLeft="14dp"
                           android:layout_marginTop="16dp"
                           android:layout_marginBottom="16dp"
                           android:layout_marginRight="10dp"
                           android:src="@drawable/yg_header"
                            android:clickable="true"
                            android:onClick="chooseHeaderImg"
                    />

                <LinearLayout android:orientation="vertical"
                              android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:layout_marginTop="20dp"
                              android:layout_marginBottom="20dp"
                              android:layout_marginRight="12dp"
                              android:layout_weight="1"
                              android:gravity="center_vertical"
                    >

                    <TextView android:id="@+id/shop_setup_name"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:textColor="@color/APPTXTBlack"
                              android:textSize="19sp"
                              android:lines="1"
                              android:text="张无忌"
                              android:gravity="center_vertical"
                        />

                    <TextView android:id="@+id/shop_setup_type"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:textColor="#999999"
                              android:textSize="17sp"
                              android:lines="1"
                              android:ellipsize="end"
                              android:text="18037975857"
                              android:gravity="center_vertical"
                              android:layout_marginTop="5dp"
                        />

                </LinearLayout>





            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="首页广告图片"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:textSize="16sp"

                />

            <ImageView
                android:id="@+id/shop_setup_banner"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="#c6c6c6"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="12dp"
                android:scaleType="fitXY"
                android:clickable="true"
                android:onClick="chooseBannerImg"
                />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:orientation="horizontal"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:background="@color/white"
                          android:padding="12dp"
                          android:gravity="top"
                          android:layout_marginTop="12dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/shop_icon01"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="地址"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/APPTXTBlack"
                        android:textSize="18sp"
                        android:gravity="top"
                        />

                </LinearLayout>



                <EditText
                    android:id="@+id/shop_setup_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请输入地址"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/APPTXTBlack"
                    android:background="@null"
                    android:textSize="18sp"
                    android:text=""
                    android:layout_weight="1"
                    android:gravity="top|right"
                    android:minHeight="38dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/app_separator_offx"
                android:paddingRight="@dimen/app_separator_offx"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#eeeeee"/>

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:orientation="horizontal"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:background="@color/white"
                          android:paddingLeft="12dp"
                          android:paddingRight="12dp"
                          android:gravity="center_vertical"
                >

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/shop_icon02"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="店铺电话"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/APPTXTBlack"
                    android:textSize="18sp"
                    android:gravity="top"

                    />

                <EditText
                    android:id="@+id/shop_setup_tel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/APPTXTBlack"
                    android:layout_marginLeft="8dp"
                    android:hint="未填写"
                    android:text=""
                    android:layout_weight="1"
                    android:inputType="text"
                    android:background="@null"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:gravity="center_vertical|right"
                    />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/shop_setup_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/APPOrange"
        android:text="提交修改"
        android:textColor="@color/white"
        android:textSize="@dimen/btn_title"
        android:gravity="center"
        android:clickable="true"
        android:onClick="submit"
        android:layout_alignParentBottom="true"
        ></TextView>


</LinearLayout>



