<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:background="@color/white"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="3dp"
        android:gravity="center_vertical"
        >

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/my_time"
            />

        <TextView
            android:id="@+id/hy_recard_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="#666666"
            android:text="2016-10-09 01:39:20"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/hy_recard_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textColor="#bd0000"
            android:text="已作废"
            android:textSize="16sp"
            android:visibility="gone"
            />




    </LinearLayout>

    <TextView
        android:id="@+id/hy_recard_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:text="卡类型: 计次卡"
        android:textSize="16sp"
        android:paddingLeft="38dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:visibility="gone"

        />

    <TextView
        android:id="@+id/hy_recard_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#239400"
        android:text="充值: +1次"
        android:textSize="16sp"
        android:layout_marginLeft="38dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"

        />

    <TextView
        android:id="@+id/hy_recard_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:text="现金: 50元"
        android:textSize="16sp"
        android:layout_marginLeft="38dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        />

    <TextView
        android:id="@+id/hy_recard_bak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:text="备注: "
        android:textSize="16sp"
        android:layout_marginLeft="38dp"
        android:paddingTop="3dp"
        android:paddingBottom="8dp"
        />


</LinearLayout>