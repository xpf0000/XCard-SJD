<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView android:id="@+id/system_msg_cell_img"
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:layout_margin="12dp"
               android:scaleType="fitXY"
               android:src="@drawable/system_msg_icon"
        />

    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_marginTop="15dp"
                  android:layout_marginBottom="20dp"
                  android:layout_marginRight="12dp"
        >

        <TextView android:id="@+id/system_msg_cell_title"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:textColor="#333333"
                  android:textSize="19sp"
                  android:layout_weight="1"
                  android:lines="1"
                  android:text="系统通知"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView android:id="@+id/system_msg_cell_info"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textColor="#999999"
                      android:textSize="17sp"
                      android:lines="1"
                      android:ellipsize="end"
                      android:layout_weight="1"
                      android:text="fasdfasdj111111111111111111111111111111111111111111"
                />



            <TextView android:id="@+id/system_msg_cell_time"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="#999999"
                      android:textSize="15sp"
                      android:text="8-15"
                      android:layout_marginLeft="8dp"
                />

        </LinearLayout>


    </LinearLayout>



</LinearLayout>