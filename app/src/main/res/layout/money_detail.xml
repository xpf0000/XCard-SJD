<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="6dp"
        android:gravity="center_vertical"
        >

       <ImageView
           android:layout_width="18dp"
           android:layout_height="18dp"
            android:src="@drawable/my_time"
           />

        <TextView
            android:id="@+id/money_detail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="#666666"
            android:text=""
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/money_detail_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textColor="#bd0000"
            android:text=""
            android:textSize="16sp"
            />




    </LinearLayout>

    <TextView
        android:id="@+id/money_detail_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:text=""
        android:textSize="16sp"
        android:paddingLeft="38dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"


    />

    <TextView
        android:id="@+id/money_detail_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#239400"
        android:text=""
        android:textSize="16sp"
        android:layout_marginLeft="38dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"

        />

    <TextView
        android:id="@+id/money_detail_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:text=""
        android:textSize="16sp"
        android:layout_marginLeft="38dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        />

    <TextView
        android:id="@+id/money_detail_bak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:text=""
        android:textSize="16sp"
        android:layout_marginLeft="38dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        />

    <TextView
        android:id="@+id/money_detail_oper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:text=""
        android:textSize="16sp"
        android:layout_marginLeft="38dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        />

</LinearLayout>